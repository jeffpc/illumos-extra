VER =	mpc-1.0.1
include ../Makefile.defs

ifneq ($(STRAP),strap)
$(error $(VER) only builds during the strap right now)
endif

AUTOCONF_OPTS += \
	--with-mpfr=$(DESTDIR)/usr

AUTOCONF_ENV += \
	CC=gcc \
	CXX=g++ \
	DESTDIR=$(DESTDIR) \
	MAKE=gmake \
	CONFIG_SHELL=/bin/bash

include ../Makefile.targ
include ../Makefile.targ.autoconf
